<h1>Courses</h1>

<%= button_to "Add New Course", new_course_path, method: :get %>

<ul>
  <% @courses.each do |course| %>
    <li>
      <span><%= link_to(course.name, course_path(course)) %></span> |
      <span><%= link_to "Delete", course_path(course), method: :delete, data: {confirm: "Are you sure you want to delete this course?"} %></span>

    </li>
  <% end %>
